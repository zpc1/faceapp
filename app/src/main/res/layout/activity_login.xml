<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login2"
    android:orientation="vertical"
    tools:context=".ui.LoginActivity">

    <TextView
        android:layout_width="520dp"
        android:layout_height="52dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="260dp"
        android:gravity="center"
        android:text="欢迎使用皮肤检测系统"
        android:textColor="#c7a0b0"
        android:textSize="42sp" />

    <LinearLayout
        android:layout_width="1360dp"
        android:layout_height="1060dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="198dp"
        android:background="#666a3e4f"
        android:orientation="vertical">

        <TextView
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="82dp"
            android:layout_marginTop="88dp"
            android:text="登录"
            android:textColor="#e4e4e4"
            android:textSize="43sp" />

        <LinearLayout
            android:layout_width="1201dp"
            android:layout_height="120dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="140dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="3dp"
                android:gravity="center_vertical"
                android:text="用户名*"
                android:textColor="#666666"
                android:textSize="30sp" />

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="center"
                android:lines="1"
                android:text="ABC"
                android:textColor="#666666"
                android:textSize="40sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="1201dp"
            android:layout_height="120dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="3dp"
                android:gravity="center_vertical"
                android:text="密码*"
                android:textColor="#666666"
                android:textSize="30sp" />

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="center"
                android:inputType="textPassword"
                android:text="ABC"
                android:lines="1"
                android:textColor="#666666"
                android:textSize="42sp" />
        </LinearLayout>

        <RelativeLayout
            android:layout_marginTop="90dp"
            android:layout_width="1201dp"
            android:gravity="center_vertical"
            android:layout_marginLeft="79dp"
            android:layout_height="64dp">

            <CheckBox
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:theme="@style/MyCheckBox"
                android:id="@+id/ck_pass"
                android:scaleX="1.5"
                android:scaleY="1.5"
                android:layout_alignParentLeft="true" />

            <TextView

                android:id="@+id/tv_savepass"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/ck_pass"
                android:layout_marginLeft="24dp"
                android:text="记住密码"
                android:textColor="#666666"
                android:textSize="30sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            
            <!--<ImageView-->
                <!--android:layout_centerVertical="true"-->
                <!--android:layout_toLeftOf="@+id/tv_forgetpass"-->
                <!--android:src="@drawable/loginpass"-->
                <!--android:layout_marginRight="35dp"-->
                <!--android:layout_width="44dp"-->
                <!--android:layout_height="64dp" />-->

            <TextView
                android:drawableLeft="@drawable/loginpass"
                android:drawablePadding="35dp"
                android:layout_marginTop="6dp"
                android:layout_alignParentRight="true"
                android:id="@+id/tv_forgetpass"
                android:text="忘记密码？"
                android:textColor="#c7a0b0"
                android:textSize="30sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <Button
            android:layout_marginTop="164dp"
            android:layout_width="1201dp"
            android:layout_height="120dp"
            android:layout_gravity="center_horizontal"
            android:background="#c8a1b0"
            android:text="登录"
            android:textColor="#ffffff"
            android:textSize="30sp" />
    </LinearLayout>
    
    <LinearLayout
        android:layout_marginTop="310dp"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_width="337dp"
        android:layout_height="26dp">

        <TextView
            android:text="登录即代表阅读并同意"
            android:textColor="#cccccc"
            android:textSize="21sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="服务条款"
            android:textColor="#c69fb0"
            android:textSize="21sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>