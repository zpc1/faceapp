<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    tools:context=".ui.ResultPreviewActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#996699">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:paddingLeft="2dp"
                android:src="@drawable/ic_menu_sort_by_size" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="检测报告"
                android:textColor="@android:color/white"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/iv_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/iv_camera"
                android:src="@drawable/ic_menu_share" />

            <ImageView
                android:id="@+id/iv_camera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:paddingRight="2dp"
                android:src="@drawable/ic_menu_camera" />


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="600dp"
            android:orientation="vertical">
            <!--<include-->
            <!--android:id="@+id/ll_item"-->
            <!--layout="@layout/grid_item" />-->
            <GridView
                android:id="@+id/gv_pingce"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:numColumns="2"></GridView>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_gaisan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#996699"
        android:gravity="center"
        android:text="如何改善"
        android:visibility="visible"
        android:textSize="30sp" />

</LinearLayout>