<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".ui.ResultPreviewActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#996699">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:paddingLeft="2dp"
                android:src="@drawable/ic_menu_sort_by_size" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="检测报告"
                android:textColor="@android:color/white"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/iv_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/iv_camera"
                android:src="@drawable/ic_menu_share" />

            <ImageView
                android:id="@+id/iv_camera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:paddingRight="2dp"
                android:src="@drawable/ic_menu_camera" />


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="600dp">
            <!--<include-->
                <!--android:id="@+id/ll_item"-->
                <!--layout="@layout/grid_item" />-->
            <GridView
                android:id="@+id/gv_pingce"
                android:focusable="true"
                android:layout_width="match_parent"
                android:numColumns="2"
                android:layout_height="wrap_content">
            </GridView>
        </LinearLayout>




        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/rl_gaishan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#996699">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="如何改善"
                android:textColor="@android:color/white"
                android:textSize="18sp" />


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingRight="3dp"
                android:src="@drawable/arrow_down_float" />


        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_gaishan_conten"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#000">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="700dp"
                android:text="综合报告说明综合报告说明综合报告说明综合报告说明综合报告说明综合报告说明综合报告说明综合报告说明综合报告说明综合报告说明" />

        </LinearLayout>
    </LinearLayout>


</LinearLayout>